

<a href="/ProductDetails/@Product.Id">
    <div class="card">
        <img class="img-thumbnail" src="https://avatarko.ru/img/kartinka/33/multfilm_lyagushka_32117.jpg">
        <div class="card-body">
            <h5 class="card-title mb-3">
                @Product.Name
            </h5>
            <p class="card-text">
                <b>@Product.Price$</b>
            </p>
        </div>
    </div>
</a>

@code {

    [Parameter]
    public ProductResponseDto Product { get; set; }
}
